<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>gestionale-op</portlet-name>
		<display-name>Gestione OP</display-name>
		<portlet-class>it.its.ct.gestionaleOP.DDTPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/jsps/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Gestione OP</title>
			<short-title>Gestione OP</short-title>
			<keywords>Gestione OP</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
        <portlet>
		<portlet-name>recupero-documenti</portlet-name>
		<display-name>Recupero Documenti</display-name>
		<portlet-class>it.its.ct.gestionaleOP.op.RecuperoDocumentiPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/jsps/op/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Recupero Documenti</title>
			<short-title>Recupero Documenti</short-title>
			<keywords>Recupero Documenti</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>